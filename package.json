{
  "name": "whatsapp-bot-mvp",
  "version": "1.0.0",
  "description": "Self-hosted WhatsApp bot with scheduling capabilities",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node --transpile-only src/index.ts",
    "dev": "ts-node --transpile-only --watch src/index.ts",
    "build": "tsc",
    "bun:start": "bun run src/index.ts",
    "bun:web": "bun run src/web.ts",
    "web": "ts-node --transpile-only src/web-node.ts",
    "test-util": "ts-node --transpile-only src/test.ts"
  },
  "keywords": ["whatsapp", "bot", "scheduler", "baileys"],
  "author": "Jonathan Borichevskiy",
  "license": "MIT",
  "dependencies": {
    "@whiskeysockets/baileys": "^6.7.8",
    "better-sqlite3": "^9.6.0",
    "node-cron": "^3.0.3",
    "@hapi/boom": "^10.0.1",
    "qrcode-terminal": "^0.12.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^20.14.10",
    "@types/node-cron": "^3.0.11",
    "@types/qrcode-terminal": "^0.12.0",
    "@types/bun": "^1.0.0",
    "typescript": "^5.5.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
} 