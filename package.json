{
  "name": "whatsapp-bot-mvp",
  "version": "1.0.0",
  "description": "Self-hosted WhatsApp bot with scheduling capabilities and web dashboard",
  "main": "src/web-node.ts",
  "scripts": {
    "start": "node --experimental-global-webcrypto node_modules/.bin/tsx src/web-node.ts",
    "dev": "node --experimental-global-webcrypto node_modules/.bin/tsx --watch src/web-node.ts",
    "bot-only": "tsx src/index.ts",
    "bot-only:dev": "tsx --watch src/index.ts",
    "web": "tsx src/web-node.ts",
    "web:dev": "tsx --watch src/web-node.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test-schedule": "tsx src/test.ts",
    "bun:start": "bun run src/web.ts",
    "bun:bot": "bun run src/index.ts",
    "clean": "rm -rf dist auth bot.sqlite",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "whatsapp",
    "bot", 
    "scheduler",
    "baileys",
    "automation",
    "messaging"
  ],
  "author": "Jonathan Borichevskiy",
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@whiskeysockets/baileys": "^6.7.8",
    "better-sqlite3": "^9.6.0",
    "node-cron": "^3.0.3",
    "qrcode-terminal": "^0.12.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^20.14.10",
    "@types/node-cron": "^3.0.11",
    "@types/qrcode-terminal": "^0.12.0",
    "typescript": "^5.5.3",
    "tsx": "^4.7.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jonbo/whatsapp-bot-mvp"
  },
  "files": [
    "src/**/*",
    "dist/**/*",
    "README.md",
    "tsconfig.json"
  ]
} 