{
    "compilerOptions": {
      "target": "ES2021",
      "module": "CommonJS",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "outDir": "dist",
      "rootDir": "src",
      "declaration": false,
      "sourceMap": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }